@{
    ViewBag.Title = "Chat";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/Assets/js/Modul/ui.css">
<link rel="stylesheet" href="~/Assets/js/jquery.mentions.css">
<script src="~/Assets/js/jquery-ui.js"></script>
<script src="~/Assets/js/jquery.mentions.js"></script>
<div class="row no-gutter">
    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
        <div class="search-box">
            <div class="input-group">
                <input class="form-control" placeholder="Search">
                <div class="input-group-btn">
                    <button type="button" class="btn btn-danger">
                        <span class="glyphicon glyphicon-search"></span>
                    </button>
                </div>
            </div>
        </div>
        <div class="users-container" style="height: 868px; overflow: auto">
            <div class="slimScrollDiv" style="position: relative; overflow: auto; width: auto; height: 100%;">
                <div class="customScroll" style="overflow: auto; width: auto; height: 100%;">
                    <div style="height:434px;overflow:auto">
                        <h4>Channel:</h4>
                        <ul class="channels">
                        </ul>
                    </div>
                    <div style="height:334px;overflow:auto">
                        <hr />
                        <h4>User:</h4>
                        <ul class="users">
                        </ul>
                    </div>
                </div><div class="slimScrollBar" style="background: rgb(192, 204, 220); width: 3px; position: absolute; top: 0px; opacity: 0.4; display: block; border-radius: 7px; z-index: 99; right: 2px; height: 468.945px;"></div><div class="slimScrollRail" style="width: 3px; height: 100%; position: absolute; top: 0px; display: none; border-radius: 7px; background: rgb(204, 204, 204); opacity: 0.2; z-index: 90; right: 2px;"></div>
            </div>
        </div>
    </div>
    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
        <div class="selected-user">
            <span>To: <span class="name">Wincy Bangalter</span></span>
        </div>
        <div class="chat-container" style="height: 750px; overflow:auto">
            <div class="slimScrollDiv" style="position: relative; overflow: hidden; width: auto; height: 80%;">
                <div class="customScroll" style="overflow: auto; width: auto; height: 100%;" id="chatContent">


                </div><div class="slimScrollBar" style="background: rgb(192, 204, 220); width: 3px; position: absolute; top: 0px; opacity: 0.4; display: none; border-radius: 7px; z-index: 99; right: 2px; height: 548px;"></div><div class="slimScrollRail" style="width: 3px; height: 100%; position: absolute; top: 0px; display: none; border-radius: 7px; background: rgb(204, 204, 204); opacity: 0.2; z-index: 90; right: 2px;"></div>
            </div>
            <div class="chat-form">
                <textarea id="messageContent" class="form-control mentions" placeholder="sendmessage" rows="1"></textarea>
                <button id="sendmessage" type="submit" class="btn btn-info">
                    <i class="icon-direction"></i>
                </button>
            </div>
        </div>
    </div>
</div>


<!--Reference the SignalR library. -->
<script src="~/Scripts/jquery.signalR-2.4.2.min.js"></script>
<!--Reference the autogenerated SignalR hub script. -->
<script src="~/signalr/hubs"></script>
<!--Add script to update the page and send messages.-->
<script src="~/Assets/js/Modul/global.js"></script>
<script src="~/Assets/js/Modul/OauthService.js"></script>
<script src="~/Assets/js/Modul/chatService.js"></script>
<script src="~/Assets/js/Modul/chat.js"></script>