@using MetaWork.Data;
@using MetaWork.Data.Provider;

@{
    NguoiDung userLoged = new NguoiDung();
    bool active = false;
    string strActive = "Active";
    string strDeActive = "DeActive";
    if (Request.Cookies[FormsAuthentication.FormsCookieName] != null)
    {
        string username = FormsAuthentication.Decrypt(Request.Cookies[FormsAuthentication.FormsCookieName].Value).Name;
        NguoiDungProvider nguoiDungP = new NguoiDungProvider();
        userLoged = nguoiDungP.GetUserByUsername(username);
        var date = DateTime.Now;
        var activity = nguoiDungP.GetActiveBy(userLoged.NguoiDungId, new DateTime(date.Year, date.Month, date.Day, 5, 0, 0));
        if (activity != null) { active = activity.Active; }
    }
    else
    {
        userLoged = null;
    }
    if (!active) { strActive = "DeActive"; strDeActive = "Active"; }
}


